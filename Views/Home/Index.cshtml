@model IEnumerable<CatFacts.Models.CatFact>

<h1>Cat Facts</h1>

@if (ViewBag.ErrorMessage != null)
{
    <div style="color:red">@ViewBag.ErrorMessage</div>
}
else if (!Model.Any())
{
    <p>No cat facts available.</p>
}
else
{
    <ul>
    @foreach (var fact in Model)
    {
        <li>@fact.Text</li>
    }
    </ul>
}